@import "variable.styl"
@import "common.styl"
.content {
  height 100vh
  background $background-color
  header {
    height 8vh
    position relative
    text-align center
    em {
      position absolute
      height 1.1rem
      width 1.1rem
      left 0
      top 0
      bottom 0
      margin auto
      background url("../img/sign/goback.png") no-repeat 50%
      background-size contain
      margin-left 1rem
    }
    span {
      line-height 8vh
      font-size .9rem
      text-align center
      display block
      color #fff
      overflow hidden
    }
  }
  .boxes {
    margin 0 .65rem .65rem
    color #101010
    font-size .75rem
    background #F0F0F0
    border-radius .5rem
    .item{
      background-color #ffffff
      .title {
        height 2.2rem
        line-height 2.2rem
        font-size .75rem
        padding 0 0.5rem
        box-sizing border-box
        .tag {
          position relative
          display inline-block
          width .2rem
          height .625rem
          border-radius .2rem
          background-color #fff238
          margin-right .625rem
          top .025rem
        }
      }
      ul {
        li {
          padding 0.8rem 0.5rem
          box-sizing border-box
          .info {
            display flex
            justify-content space-between
            align-items center
            .left {
              display flex
              justify-content space-between
              align-items center
              .icon {
                height 1.7rem
                width 1.9rem
              }
              .msg {
                margin-left 0.8rem
                h2 {
                  color #000
                  font-size .75rem
                  margin-right .5rem
                }
                span {
                  font-size .6rem
                  color #b6b6b6
                  margin-top .1rem
                  width 10.25rem
                }
              }
            }
            .right{
              float right
              width 3.5rem
              height 1.5rem
              line-height 1.5rem
              text-align center
              color #fff
              background-color #ff7ab5
              border-radius .75rem
              font-size .6rem
            }
            .getYet{
              background #cecece !important
            }
          }
        }
      }
    }
    .item:nth-child(1){
      border-top-left-radius  0.6rem
      border-top-right-radius  0.6rem
      li:nth-child(1){
        .info{
          .left{
            .icon{
              background url("../img/task/pic_0.png") no-repeat 50%
              background-size contain
            }
          }
        }
      }
    }
    .item:nth-child(2){
      border-bottom-left-radius  0.6rem
      border-bottom-right-radius  0.6rem
      margin-top 1rem
      ul{
        li:nth-child(1){
          .info{
            .left{
              .icon{
                background url("../img/task/pic_2.png") no-repeat 50%
                background-size contain
              }
            }
          }
        }
        li:nth-child(2){
          .info{
            .left{
              .icon{
                background url("../img/task/pic_3.png") no-repeat 50%
                background-size contain
              }
            }
          }
        }
        li:nth-child(3){
          .info{
            .left{
              .icon{
                background url("../img/task/pic_7.png") no-repeat 50%
                background-size contain
              }
            }
          }
        }
        li:nth-child(4){
          .info{
            .left{
              .icon{
                background url("../img/task/pic_7.png") no-repeat 50%
                background-size contain
              }
            }
          }
        }
      }
    }
  }
}