@import "common.styl"
@import "variable.styl"

body {
  background: $background-color;
  .content {
    padding 0 0.5rem
    header {
    //height 3.8rem
      width 100%
      display flex
      align-items center
      justify-content space-between
      height $headerHeight
      .user-msg {
        color: $fontHesderColor;
        font-size: .7rem;
        float: left;
        display flex
        align-items center
        img {
          width: 1.8rem;
          height: 1.8rem;
          margin-right: .5rem;
          border-radius: 50%;
        }
      }
      .acc-box {
        height 1rem
        background-color #ffffff
        border-radius 16px
        display flex
        align-items center
        justify-content space-between
        padding 0 0.2rem
        img {
          height 0.7rem
        //width 0.5rem
          border-radius 50%
        }
        span {
          font-size 0.8rem
          padding 0 0.2rem
          box-sizing border-box
          color: #363636
        }
      }
    }

    .act-box {
      color: $fontHesderColor;
      background-color $act-color
      border-radius 4px
      height $actHeight
      ul {
        padding: .55rem .15rem
        display: -webkit-box
        display: -ms-flexbox
        display: flex
        -webkit-box-pack: justify
        -ms-flex-pack: justify
        justify-content: space-between
        -webkit-box-align: center
        -ms-flex-align: center
        align-items: center
        li {
          padding-left: 2rem
          font-size: .45rem
          p {
            font-size: .54rem;
            font-weight: 700;
            margin-top: .35rem;
          }
        }
        li.line {
          padding: 0;
          background: "";
          height: .75rem;
          border-right: 1px solid #fff;
          opacity: .5;
        }
        li:nth-child(1) {
          background url("../img/index/yaoqing.png") no-repeat
          background-size: 1.9rem
        }
        li:nth-child(3) {
          background url("../img/index/qiandao.png") no-repeat
          background-size: 1.9rem
        }
        li:nth-child(5) {
          background url("../img/index/renwu.png") no-repeat
          background-size: 1.9rem
        }
      }
    }
    .room-list {
      height $roomListHeight
      overflow hidden
      position relative
      ul {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        -webkit-box-pack: justify;
        -ms-flex-pack: justify;
        justify-content: space-between;
        padding:1rem 0 0.2rem
        li {
          width: 48%;
          background: #fff;
          font-size: .6rem;
          border-radius: .2rem;
          position: relative;
          margin-bottom: .65rem;
          overflow: hidden;
          p {
            position: absolute;
            top: .25rem;
            right: .25rem;
            span.on{
              background: $playingColor !important;
            }
            span:nth-child(1) {
              float: left;
              width: .75rem;
              height: .75rem;
              border-radius: 50%;
              background: $freeColor;
              margin-right: .25rem;
              margin-top: .05rem;
            }
          }
          img {
            width: 100%;
          }
          h2 {
            font-size: .7rem;
            color: $font-color;
            padding: 0.2rem .65rem;
            font-weight: 400;
          }
          .room-msg {
            padding: .25rem .65rem .45rem;
            display: flex;
            justify-content: space-between;
            span {
              padding-left: .75rem;
              background: url('../img/index/default_jinbi.png')no-repeat 0.025rem
              background-size: .55rem;
            }
            .count {
              color: #363636;
              b {
                color: #ff4119;
              }
            }
            .num {
              color: rgba(38, 38, 38, .45);
              background-image  url("../img/index/default_icon.png")
            }
          }
        }
      }
    }
  }
}