@import "variable.styl"
@import "common.styl"
body{
  background $background-color
  height 100vh
}
.content{
  header {
    height 8vh
    display flex
    padding 0 1rem
    position relative
    align-items center
    justify-content space-between
    em {
      height: 1.1rem;
      width: 1.1rem;
      background: url(../img/sign/goback.png) no-repeat 50%;
      background-size: contain;
    }
    span {
      height: 2.45rem;
      line-height: 2.45rem;
      font-size: .7rem;
      color: #fff;
    }
    span:nth-child(2) {
      font-size 0.9rem
    }
  }
  .box{
    width 90%
    margin auto
    border-radius 6px
    background-color #ffffff
    ul{
      display flex
      justify-content space-between
      flex-wrap wrap
      li{
        display flex
        flex-direction column
        border 1px solid #ff7ab5
        width 44%
        border-radius 6px
        align-items center
        padding 0.4rem
        margin 0.4rem
        img{
          height 5rem
          width 5rem
          border-radius 12px
          border 1px solid #e1e1e1
        }
        span{
          font-size 0.8rem
          line-height 1.2rem
          height 1.2rem
          margin-top 0.4rem
        }
        span:nth-child(3){
          color #ffc226
        }
      }
    }
  }
  .noCatch{
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    width 100%
    height 5rem
    text-align center
    display none
    i{
      height 4rem
      width 4rem
      background url("../img/index/null.png")50% no-repeat
      background-size contain
      display inline-block
    }
    span{
      color #ffffff
      font-size 0.74rem
      display block
    }
  }

}